# shellcheck source=/dev/null
source ~/.config/sh/interactive

if [ -x "$(command -v starship)" ]; then
	eval "$(starship init bash)"
fi

if [ -x "$(command -v atuin)" ]; then
  eval "$(atuin init bash)"
fi

if [ -d "$HOMEBREW_PREFIX/share/bash/site-functions" ]; then
	FPATH="$HOMEBREW_PREFIX/share/bash/site-functions:$FPATH"
fi
if [ -d "$XDG_CACHE_HOME" ]; then
	autoload -Uz compinit
	mkdir -p "$XDG_CACHE_HOME/bash"
	compinit -d "$XDG_CACHE_HOME/bash/zcompdump-$BASH_VERSION"
fi

# force emacs bindings
bindkey -e

# bash navigation
autoload -U select-word-style
select-word-style bash

# direnv
if [ -x "$(command -v direnv)" ]; then
	eval "$(direnv hook bash)"
fi

# aliases
alias dotrot="emacs $HOME/apps/dot-rot"
